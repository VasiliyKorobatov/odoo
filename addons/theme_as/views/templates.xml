<odoo>
    <data>
        <template id="theme_as_layout" inherit_id="website.layout" name="Theme AS Layout">
            <xpath expr="//div[@id='wrapwrap']" position="attributes">
                <attribute name="class"></attribute>
            </xpath>
            <xpath expr="//div[@id='wrapwrap']/header" position="attributes">
                <attribute name="role">banner</attribute>
                <attribute name="class">site-header</attribute>
            </xpath>
            <xpath expr="//div[@id='wrapwrap']/footer" position="attributes">
                <attribute name="role">contentinfo</attribute>
                <attribute name="class">site-footer</attribute>
            </xpath>
            <xpath expr="//div[@id='wrapwrap']/header" position="before">
                <div class="top-wrap-panel">

                </div>
            </xpath>
            <xpath expr="//div[@id='wrapwrap']/footer" position="before">
                <div class="bottom-block">

                </div>
            </xpath>
        </template>
        <template id="theme_as_homepage" inherit_id="website.homepage" name="Theme AS Homepage">
            <xpath expr="//div[@id='wrap']" position="attributes">
                <attribute name="class">oe_structure</attribute>
            </xpath>
            <xpath expr="//div[@id='wrap']" position="inside">
                <div class="main-top-block"/>
                <div class="folder-block"/>
                <div class="site-container"/>
                <div class="content-block"/>
                <div class="site-container"/>
                <div class="subscribe-block"/>
            </xpath>
        </template>
    </data>
</odoo>