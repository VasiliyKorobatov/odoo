<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="st_slider" name="Красивый слайдер c текстом">
            <section class="carousel st_slider " id="myslider">
                <div class="container text-center">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="carousel slide mb0" data-interval="3000" id="item">
                                <div class="carousel-inner">
                                    <div class="item active">
                                        <div class="pic">
                                            <img src="/nice_slider/static/img/img3.jpg" class="mg-responsive"
                                                 style="width: 100%;"/>
                                        </div>
                                        <div class="left-sliderText">
                                            <div class="info">
                                                <div>
                                                    <div>
                                                        <div class="title">Внимание АКЦИЯ!</div>
                                                        <div class="text">
                                                            <p>Только на этой неделе мы снижаем стоимость продажи
                                                                погрузчиков на 5%.
                                                                Сэкономьте десятки тысяч рублей!
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="link">
                                                        <a href="/page/akcii">Узнать больше ...</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="chevron">
                                    <a data-slide="prev" data-target="#myslider">
                                        <i class="fa fa-chevron-left"/>
                                    </a>
                                    <a data-slide="next" data-target="#myslider">
                                        <i class="fa fa-chevron-right"/>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </template>
        <template id="carousel_text_id" inherit_id="website.snippets">
            <xpath expr="//div[@class='o_panel_body']" position="inside">
                <t t-snippet="nice_slider_with_text.st_slider" t-thumbnail="/nice_slider_with_text/static/img/snippets.png"/>
            </xpath>
        </template>
    </data>
</openerp>