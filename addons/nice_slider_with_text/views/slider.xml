                    <i class="fa fa-chevron-left"></i>
                </div>
                <div class="carousel-control right hidden" data-target="#myCarousel" data-slide="next"
                     style="width: 10%">
                    <i class="fa fa-chevron-right"></i>
                </div>
            </div>
